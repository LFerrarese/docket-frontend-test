{
  "compilerOptions": {
    "strict": true,
    "target": "ES5",
    "module": "CommonJS",
    "baseUrl": "./src",
    "outDir": "./dist",

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "esModuleInterop": true,
    "experimentalDecorators": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
